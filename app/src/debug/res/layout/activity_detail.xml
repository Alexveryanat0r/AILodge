<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/namehotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Отель 1"
        android:gravity="center"
        android:textSize="16sp"/>





    <ImageView
        android:id="@+id/outusers"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:onClick="openEdit"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/namehotel"
        android:checked="true"
        android:text="Описание" />

    <TextView
        android:id="@+id/nameHotelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:maxHeight="150dp"
        android:scrollbars="vertical"
        android:text="TextView" />

    <TextView
        android:id="@+id/textnameai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameHotelTextView"
        android:layout_marginTop="107dp"
        android:gravity="center"
        android:text="Описание через ии" />

    <TextView
        android:id="@+id/dessai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textnameai"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:maxHeight="200dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="63dp"
        android:layout_below="@+id/nameHotelTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="ПЕреенерарировать" />


    </LinearLayout>

    <Button
        android:id="@+id/openwebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Перейти на MTC  travel"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>
